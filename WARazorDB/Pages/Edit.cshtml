@page
@model WARazorDB.Pages.EditModel

@{
    ViewData["Title"] = "Editar Tarea";
}

<div class="content-container">
    <h1 class="page-title">Editar Tarea</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Tarea.Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Tarea.nombreTarea" class="form-label">Nombre de la Tarea</label>
                    <input asp-for="Tarea.nombreTarea" class="form-control" />
                    <span asp-validation-for="Tarea.nombreTarea" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Tarea.fechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                    <input asp-for="Tarea.fechaVencimiento" class="form-control" type="date" />
                    <span asp-validation-for="Tarea.fechaVencimiento" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Tarea.estado" class="form-label">Estado</label>
                    <select asp-for="Tarea.estado" class="form-control">
                        <option value="Pendiente">Pendiente</option>
                        <option value="En Progreso">En Progreso</option>
                        <option value="Completado">Completado</option>
                    </select>
                    <span asp-validation-for="Tarea.estado" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Tarea.idUsuario" class="form-label">ID de Usuario</label>
                    <input asp-for="Tarea.idUsuario" class="form-control" />
                    <span asp-validation-for="Tarea.idUsuario" class="text-danger"></span>
                </div>
                
                <div class="form-group d-flex justify-content-between align-items-center mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to list
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
